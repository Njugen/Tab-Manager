{
  "name": "tab-management-browser-plugin",
  "version": "1.0.1",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/chrome": "^0.0.245",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.50",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-redux": "^7.1.33",
    "autoprefixer": "^10.4.15",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-modules-typescript-loader": "^4.0.1",
    "jest-chrome": "^0.8.0",
    "postcss": "^8.4.29",
    "postcss-loader": "^7.3.3",
    "postcss-nesting": "^12.0.1",
    "react": "^18.2.0",
    "react-css-modules": "^4.7.11",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "redux-mock-store": "^1.5.4",
    "redux-thunk": "^2.4.2",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  },
  "scripts": {
    "format": "npx prettier --write ./src",
    "build-prod-firefox": "webpack --env browser=firefox --env label=prod --progress --config webpack.prod.js",
    "build-dev-firefox": "webpack --env browser=firefox --env label=dev --progress --config webpack.dev.js",
    "build-prod-chrome": "webpack --env browser=chrome --env label=prod --progress --config webpack.prod.js",
    "build-dev-chrome": "webpack --env browser=chrome --env label=dev --progress --config webpack.dev.js",
    "test": "react-scripts test --verbose --coverage --watchAll"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-private-property-in-object": "^7.22.11",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/user-event": "^14.5.2",
    "@types/redux-mock-store": "^1.0.6",
    "zip-webpack-plugin": "^4.0.1"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "./redux/",
      "./redux-toolkit/",
      "./tools/",
      "./webextension/",
      "./services/",
      "./interfaces/",
      "./styles/",
      "./src/App.tsx",
      "./src/index.tsx",
      "./src/sidepanel.tsx",
      "./baseUI/",
      "./src/views/dashboard/dashboard_view.tsx",
      "^(.*?)components/(.*?)functions/",
      "^(.*?)components/(.*?)functions/",
      "^(.*?)components/(.*?)components/",
      "^(.*?)baseUI/(.*?)components/",
      "^(.*?)baseUI/(.*?)functions/",
      "^(.*?)views/(.*?)components/",
      "^(.*?)views/(.*?)functions/",
      "^(.*?)components/(.*?)icons/",
      "(.*?)reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
