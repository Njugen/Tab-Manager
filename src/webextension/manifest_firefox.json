{
	"manifest_version": 3,
	"name": "Tab Management Browser Plugin",
	"version": "1.0.1",
	"description": "Tab manager plugin for Firefox. This release gives the user a larger overview over active and archived tabs.",
	"permissions": ["history", "tabs", "storage"],
	"action": {
		"default_title": "Tab Management Browser Plugin"
	},
	"icons": {
		"128": "brand/icon-128.png",
		"48": "brand/icon-48.png"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"background": {
		"scripts": ["background.js"]
	},
	"sidebar_action": {
		"default_icon": {
			"16": "brand/icon-128.png",
			"32": "brand/icon-48.png"
		},
		"default_title": "Tab Management Browser Plugin",
		"default_panel": "sidepanel.html",
		"open_at_install": false
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "f4892cb3-81cf-4388-b65a-603834b2730d",
			"strict_min_version": "42.0",
			"update_url": "https://raw.githubusercontent.com/Njugen/Tab-Manager-Browser-Plugin/master/firefox_updates.json"
		}
	},
	"author": "Thai Nguyen"
}
